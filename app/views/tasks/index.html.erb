<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task.id) %> . <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure ?"} %></li>
<% end %>
</ul>

<%= link_to new_task_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>
